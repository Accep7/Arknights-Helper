<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false">

            <TextView
                android:id="@+id/rec_calc_activity_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_the_tags"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/divider_heading"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- region Qualification -->
            <View
                android:id="@+id/divider_heading"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_bg"
                app:layout_constraintBottom_toBottomOf="@id/rec_calc_activity_heading"
                app:layout_constraintTop_toBottomOf="@id/rec_calc_activity_heading" />

            <View
                android:id="@+id/qualification_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_bg"
                app:layout_constraintBottom_toBottomOf="@id/button_qualification_starter"
                app:layout_constraintTop_toBottomOf="@id/section_qualification" />

            <TextView
                android:id="@+id/section_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qualification"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/qualification_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_starter"
                app:layout_constraintTop_toTopOf="@id/divider_heading" />

            <ToggleButton
                android:id="@+id/button_qualification_starter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/qualification_divider"
                app:layout_constraintLeft_toRightOf="@id/section_qualification"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_senior"
                app:layout_constraintTop_toBottomOf="@id/divider_heading"
                tools:textOff="@string/starter"
                tools:textOn="@string/starter" />

            <ToggleButton
                android:id="@+id/button_qualification_senior"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@id/qualification_divider"
                app:layout_constraintLeft_toRightOf="@id/button_qualification_starter"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_top"
                app:layout_constraintTop_toBottomOf="@id/divider_heading"
                tools:textOff="@string/senior_op"
                tools:textOn="@string/senior_op" />

            <ToggleButton
                android:id="@+id/button_qualification_top"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@id/qualification_divider"
                app:layout_constraintLeft_toRightOf="@id/button_qualification_senior"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_heading"
                tools:textOff="@string/top_op"
                tools:textOn="@string/top_op" />
            <!-- endregion -->

            <!-- region Attack type -->
            <View
                android:id="@+id/divider_attack_type"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_bg"
                app:layout_constraintTop_toBottomOf="@id/button_attack_type_melee" />

            <TextView
                android:id="@+id/section_attack_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/attack_type"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/divider_attack_type"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_starter"
                app:layout_constraintTop_toBottomOf="@id/qualification_divider" />

            <ToggleButton
                android:id="@+id/button_attack_type_melee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/divider_attack_type"
                app:layout_constraintLeft_toLeftOf="@id/button_qualification_starter"
                app:layout_constraintTop_toBottomOf="@id/qualification_divider"
                tools:textOff="@string/melee"
                tools:textOn="@string/melee" />

            <ToggleButton
                android:id="@+id/button_attack_type_ranged"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/divider_attack_type"
                app:layout_constraintLeft_toLeftOf="@id/button_qualification_senior"
                app:layout_constraintTop_toBottomOf="@id/qualification_divider"
                tools:textOff="@string/ranged"
                tools:textOn="@string/ranged" />
            <!-- endregion -->

            <!-- region Class -->
            <View
                android:id="@+id/divider_class"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_bg"
                app:layout_constraintTop_toBottomOf="@id/button_class_vanguard" />

            <TextView
                android:id="@+id/section_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inGameClass"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/divider_class"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_starter"
                app:layout_constraintTop_toBottomOf="@id/divider_attack_type" />

            <ToggleButton
                android:id="@+id/button_class_guard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_attack_type_melee"
                app:layout_constraintTop_toBottomOf="@id/button_attack_type_melee"
                tools:textOff="@string/guard"
                tools:textOn="@string/guard" />

            <ToggleButton
                android:id="@+id/button_class_specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_class_guard"
                app:layout_constraintRight_toLeftOf="@id/button_class_sniper"
                app:layout_constraintTop_toTopOf="@id/button_class_guard"
                tools:textOff="@string/specialist"
                tools:textOn="@string/specialist" />

            <ToggleButton
                android:id="@+id/button_class_sniper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_qualification_top"
                app:layout_constraintTop_toTopOf="@id/button_class_guard"
                tools:textOff="@string/sniper"
                tools:textOn="@string/sniper" />

            <ToggleButton
                android:id="@+id/button_class_caster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/button_class_vanguard"
                app:layout_constraintLeft_toLeftOf="@id/button_class_guard"
                app:layout_constraintTop_toBottomOf="@id/button_class_guard"
                tools:textOff="@string/caster"
                tools:textOn="@string/caster" />

            <ToggleButton
                android:id="@+id/button_class_defender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_class_caster"
                app:layout_constraintRight_toLeftOf="@id/button_class_medic"
                app:layout_constraintTop_toTopOf="@id/button_class_caster"
                tools:textOff="@string/defender"
                tools:textOn="@string/defender" />

            <ToggleButton
                android:id="@+id/button_class_medic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/button_class_vanguard"
                app:layout_constraintRight_toRightOf="@id/button_class_sniper"
                app:layout_constraintTop_toTopOf="@id/button_class_caster"
                tools:textOff="@string/medic"
                tools:textOn="@string/medic" />

            <ToggleButton
                android:id="@+id/button_class_vanguard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/divider_class"
                app:layout_constraintLeft_toLeftOf="@id/button_class_caster"
                app:layout_constraintTop_toBottomOf="@id/button_class_caster"
                tools:textOff="@string/vanguard"
                tools:textOn="@string/vanguard" />

            <ToggleButton
                android:id="@+id/button_class_supporter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/divider_class"
                app:layout_constraintLeft_toLeftOf="@id/button_class_defender"
                app:layout_constraintTop_toTopOf="@id/button_class_vanguard"
                tools:textOff="@string/supporter"
                tools:textOn="@string/supporter" />
            <!-- endregion -->

            <!-- region Affix -->
            <View
                android:id="@+id/divider_affix"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_bg"
                app:layout_constraintTop_toBottomOf="@id/button_affix_cc" />

            <TextView
                android:id="@+id/text_view_affix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/affix"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/divider_affix"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_qualification_starter"
                app:layout_constraintTop_toBottomOf="@id/divider_class" />

            <ToggleButton
                android:id="@+id/button_affix_healing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_class_vanguard"
                app:layout_constraintTop_toBottomOf="@id/button_class_vanguard"
                tools:textOff="@string/healing"
                tools:textOn="@string/healing" />

            <ToggleButton
                android:id="@+id/button_affix_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_affix_healing"
                app:layout_constraintRight_toLeftOf="@id/button_affix_slow"
                app:layout_constraintTop_toTopOf="@id/button_affix_healing"
                tools:textOff="@string/defense"
                tools:textOn="@string/defense" />

            <ToggleButton
                android:id="@+id/button_affix_slow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_class_medic"
                app:layout_constraintTop_toTopOf="@id/button_affix_healing"
                tools:textOff="@string/slow"
                tools:textOn="@string/slow" />

            <ToggleButton
                android:id="@+id/button_affix_dp_recovery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_affix_healing"
                app:layout_constraintTop_toBottomOf="@id/button_affix_healing"
                tools:textOff="@string/dp_recovery"
                tools:textOn="@string/dp_recovery" />

            <ToggleButton
                android:id="@+id/button_affix_aoe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_affix_defense"
                app:layout_constraintRight_toRightOf="@id/button_affix_defense"
                app:layout_constraintTop_toTopOf="@id/button_affix_dp_recovery"
                tools:textOff="@string/aoe"
                tools:textOn="@string/aoe" />

            <ToggleButton
                android:id="@+id/button_affix_dps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_affix_slow"
                app:layout_constraintTop_toTopOf="@id/button_affix_dp_recovery"
                tools:textOff="@string/dps"
                tools:textOn="@string/dps" />

            <ToggleButton
                android:id="@+id/button_affix_survival"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_affix_dp_recovery"
                app:layout_constraintTop_toBottomOf="@id/button_affix_dp_recovery"
                tools:textOff="@string/survival"
                tools:textOn="@string/survival" />

            <ToggleButton
                android:id="@+id/button_affix_shift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_affix_survival"
                app:layout_constraintRight_toLeftOf="@id/button_affix_support"
                app:layout_constraintTop_toTopOf="@id/button_affix_survival"
                tools:textOff="@string/shift"
                tools:textOn="@string/shift" />

            <ToggleButton
                android:id="@+id/button_affix_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_affix_dps"
                app:layout_constraintTop_toTopOf="@id/button_affix_survival"
                tools:textOff="@string/support"
                tools:textOn="@string/support" />

            <ToggleButton
                android:id="@+id/button_affix_debuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_affix_survival"
                app:layout_constraintTop_toBottomOf="@id/button_affix_survival"
                tools:textOff="@string/debuff"
                tools:textOn="@string/debuff" />

            <ToggleButton
                android:id="@+id/button_affix_fast_redeploy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_affix_debuff"
                app:layout_constraintRight_toLeftOf="@id/button_affix_robot"
                app:layout_constraintTop_toTopOf="@id/button_affix_debuff"
                tools:textOff="@string/fast_redeploy"
                tools:textOn="@string/fast_redeploy" />

            <ToggleButton
                android:id="@+id/button_affix_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_affix_support"
                app:layout_constraintTop_toTopOf="@id/button_affix_debuff"
                tools:textOff="@string/robot"
                tools:textOn="@string/robot" />

            <ToggleButton
                android:id="@+id/button_affix_summon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/button_affix_debuff"
                app:layout_constraintTop_toBottomOf="@id/button_affix_debuff"
                tools:textOff="@string/summon"
                tools:textOn="@string/summon" />

            <ToggleButton
                android:id="@+id/button_affix_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/button_affix_summon"
                app:layout_constraintRight_toLeftOf="@id/button_affix_nuker"
                app:layout_constraintTop_toTopOf="@id/button_affix_summon"
                tools:textOff="@string/crowd_control"
                tools:textOn="@string/crowd_control" />

            <ToggleButton
                android:id="@+id/button_affix_nuker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="@id/button_affix_robot"
                app:layout_constraintTop_toTopOf="@id/button_affix_summon"
                tools:textOff="@string/nuker"
                tools:textOn="@string/nuker" />
            <!-- endregion -->

            <!--region Results-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/results_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/divider_affix"
                tools:visibility="visible">

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Reset 5 tags" />

                <View
                    android:id="@+id/divider_reset"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_bg"
                    app:layout_constraintTop_toBottomOf="@id/reset_button" />

                <TextView
                    android:id="@+id/heading_results"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/results"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_reset" />

                <View
                    android:id="@+id/divider_results"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_bg"
                    app:layout_constraintTop_toBottomOf="@id/heading_results" />

                <TextView
                    android:id="@+id/heading_selected_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/tag"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_results" />

                <TextView
                    android:id="@+id/heading_character_possibility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/possible_character"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_results" />

                <View
                    android:id="@+id/divider_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/divider_bg"
                    app:layout_constraintTop_toBottomOf="@id/heading_selected_tag" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view_group"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:nestedScrollingEnabled="true"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider_recycler" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- endregion -->


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>