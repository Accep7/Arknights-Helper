<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="300">
        <OnClick motion:clickAction="toggle" />
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            motion:layout_constraintLeft_toLeftOf="@id/margin_guide"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:elevation="10dp"
            motion:layout_constraintLeft_toLeftOf="@id/margin_guide"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/info_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:visibility="visible"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/height_preserver" />
        <Constraint
            android:id="@+id/operator_info_rarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            motion:layout_constraintLeft_toRightOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintRight_toLeftOf="@id/operator_info_type_class"
            motion:layout_constraintTop_toBottomOf="@id/info_divider" />
        <Constraint
            android:id="@+id/operator_info_type_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:visibility="visible"
            motion:layout_constraintLeft_toRightOf="@id/operator_info_rarity"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="@id/operator_info_rarity" />
        <Constraint
            android:id="@+id/operator_info_tags"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="visible"
            motion:layout_constraintLeft_toLeftOf="@id/operator_info_rarity"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/operator_info_type_class" />
        <Constraint
            android:id="@+id/placeholder_portrait_expanded"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="visible"
            motion:layout_constraintLeft_toRightOf="@id/margin_guide"
            motion:layout_constraintTop_toBottomOf="@id/info_divider" />
        <Constraint
            android:id="@+id/operator_info_archetype_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toBottomOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_info_class_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintRight_toRightOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toBottomOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_portrait"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:elevation="10dp"
            motion:layout_constraintEnd_toEndOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintLeft_toLeftOf="@id/placeholder_portrait_expanded"
            motion:layout_constraintStart_toStartOf="@+id/placeholder_portrait_expanded"
            motion:layout_constraintTop_toTopOf="@id/placeholder_portrait_expanded" />
        <Constraint
            android:id="@+id/operator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            motion:layout_constraintBottom_toTopOf="@id/info_divider"
            motion:layout_constraintLeft_toRightOf="@id/margin_guide"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/expand_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="8dp"
            android:rotation="180"
            motion:layout_constraintBottom_toTopOf="@id/info_divider"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/text_views_group"
            motion:layout_constraintLeft_toRightOf="@id/placeholder_portrait_expanded"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="@id/divider_barrier" />
    </ConstraintSet>
</MotionScene>